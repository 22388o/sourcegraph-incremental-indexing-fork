{
  "private": true,
  "name": "sourcegraph-preview",
  "displayName": "Sourcegraph - preview",
  "version": "0.0.2",
  "description": "Sourcegraph for VS Code",
  "publisher": "kandalatj",
  "sideEffects": false,
  "license": "Apache-2.0",
  "icon": "images/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/sourcegraph/sourcegraph.git"
  },
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:sourcegraph.openInBrowser",
    "onCommand:sourcegraph.search",
    "onCommand:sourcegraph.copyFileLink",
    "onCommand:sourcegraph.selectionSearch",
    "onCommand:sourcegraph.selectionSearchWeb",
    "onCommand:extension.openFile",
    "onView:sourcegraph.extensionHost",
    "onView:sourcegraph.searchSidebar",
    "onView:sourcegraph.files",
    "onWebviewPanel:sourcegraphSearch"
  ],
  "main": "./dist/node/extension.js",
  "browser": "./dist/webworker/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sourcegraph.search",
        "category": "Sourcegraph",
        "title": "Open Search Tab",
        "icon": {
          "light": "images/logo.svg",
          "dark": "images/logo.svg"
        }
      },
      {
        "command": "sourcegraph.openInBrowser",
        "category": "Sourcegraph",
        "title": "Open File in Sourcegraph Web",
        "icon": {
          "light": "images/logomark_dark.svg",
          "dark": "images/logomark_light.svg"
        }
      },
      {
        "command": "sourcegraph.copyFileLink",
        "category": "Sourcegraph",
        "title": "Copy Sourcegraph File Link"
      },
      {
        "command": "sourcegraph.selectionSearch",
        "category": "Sourcegraph",
        "title": "Search Selection in Sourcegraph Tab"
      },
      {
        "command": "sourcegraph.selectionSearchWeb",
        "category": "Sourcegraph",
        "title": "Search Selection in Sourcegraph Web"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sourcegraph-view",
          "title": "Sourcegraph",
          "icon": "images/logo.png"
        }
      ]
    },
    "views": {
      "sourcegraph-view": [
        {
          "type": "webview",
          "id": "sourcegraph.searchSidebar",
          "name": "Search",
          "visibility": "visible",
          "when": "!sourcegraph.showFileTree"
        },
        {
          "id": "sourcegraph.files",
          "name": "Sourcegraph Remote Files",
          "visibility": "visible",
          "when": "sourcegraph.canFocusActiveDocument"
        },
        {
          "type": "webview",
          "id": "sourcegraph.extensionHost",
          "name": "Extension Host",
          "visibility": "visible",
          "when": "sourcegraph.activeSearchPanel || sourcegraph.showFileTree || sourcegraph.canFocusActiveDocument"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "sourcegraph.files",
        "contents": "No open files."
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Sourcegraph extension configuration",
      "properties": {
        "sourcegraph.url": {
          "type": [
            "string"
          ],
          "default": "https://sourcegraph.com",
          "description": "The base URL of the Sourcegraph instance to use.",
          "examples": [ "https://sourcegraph.com"]
        },
        "sourcegraph.accessToken": {
          "type": [
            "string"
          ],
          "default": "",
          "description": "The access token to query the Sourcegraph API. Create a new access token at ${SOURCEGRAPH_URL}/users/settings/tokens",
          "examples": [ "https://sourcegraph.com"]
        },
        "sourcegraph.corsURL": {
          "type": [
            "string"
          ],
          "default": "",
          "description": "CORS headers are necessary for the extension to fetch data when using VS Code Web with instances on version under 3.35.2."
        },
        "sourcegraph.defaultBranch": {
          "type": [
            "string"
          ],
          "default": "",
          "description": "Always open files in the default branch"
        },
        "sourcegraph.remoteUrlReplacements": {
          "type": [
            "string"
          ],
          "default": "",
          "description": "Replace strings in the remote URL. It takes objects, where each `key` is replaced by `value` in the remote url."
        }
      }
    },
    "keybindings": [
      {
        "command": "sourcegraph.search",
        "key": "ctrl+shift+8",
        "mac": "cmd+shift+8"
      },
      {
        "command": "sourcegraph.openInBrowser",
        "key": "alt+a",
        "mac": "option+a"
      },
      {
        "command": "sourcegraph.selectionSearch",
        "key": "alt+q",
        "mac": "option+q"
      },
      {
        "command": "sourcegraph.selectionSearchWeb",
        "key": "alt+s",
        "mac": "option+s"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sourcegraph.openInBrowser",
          "group": "sourcegraph"
        },
        {
          "command": "sourcegraph.copyFileLink",
          "group": "sourcegraph"
        },
        {
          "command": "sourcegraph.selectionSearch",
          "group": "sourcegraph",
          "when": "editorHasSelection"
        },
        {
          "command": "sourcegraph.selectionSearchWeb",
          "group": "sourcegraph",
          "when": "editorHasSelection"
        }
      ],
      "view/item/context": [
        {
          "command": "sourcegraph.openInBrowser",
          "when": "view == sourcegraph.files && viewItem == selected",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "eslint": "eslint --cache '**/*.[jt]s?(x)'",
    "build": "webpack --config-name extension:node --config-name extension:node --config-name webviews",
    "build:node": "webpack --config-name extension:node --config-name webviews",
    "build:web": "webpack --config-name extension:webworker --config-name webviews",
    "dev": "webpack --mode=development --config-name extension:node --config-name webviews",
    "dev:web": "webpack --mode=development --config-name extension:webworker --config-name webviews",
    "watch": "webpack --mode=development --watch --config-name extension:node --config-name webviews",
    "watch:web": "webpack --mode=development --watch --config-name extension:webworker --config-name webviews",
    "test": "echo \"No tests exist yet\" && exit 1"
  },
  "devDependencies": {
    "process": "^0.11.10",
    "@types/vscode": "^1.59.0",
    "ts-loader": "^9.2.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0",
    "@types/webpack-env": "^1.16.0",
    "stream-browserify": "^3.0.0"
  }
}
