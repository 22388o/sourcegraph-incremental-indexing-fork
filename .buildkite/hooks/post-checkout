#!/usr/bin/env bash

# Fetch the latest origin/master to accurately determine the set of changed
# files on this branch.
echo "Running git fetch..."
git fetch
echo "Running git fetch... done"

echo "Setup NPM proxy..."
yarn config set proxy http://npm-proxy-cache:8080/
yarn config set https-proxy http://npm-proxy-cache:8080/
yarn config set strict-ssl false
echo "Running NPM proxy... done"
