#!/usr/bin/env bash

# Fetch the latest origin/master to accurately determine the set of changed
# files on this branch.
echo "Running git fetch..."
git fetch
echo "Running git fetch... done"

echo "install asdf plugins"
asdf install
echo "done installing"

# TODO Temporary download so I can test this branch without its companion on sourcegraph/infrastructure
echo "Fetching buildevents"
curl -L -o buildevents https://github.com/honeycombio/buildevents/releases/latest/download/buildevents-linux-amd64
chmod 755 buildevents
mv buildevents /usr/local/bin
